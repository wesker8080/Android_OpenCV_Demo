<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttons"
        android:orientation="horizontal">
        <Button
            android:id="@+id/process_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/select_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择图像"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/buttons"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/seekBar_group">
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:progress="3"
            android:secondaryProgress="127"
            android:id="@+id/seekBarView" />
        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/seekBarValueTxtView" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/lady"
        android:layout_below="@+id/seekBar_group"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:id="@+id/imageView" />
</RelativeLayout>
